
{{#if user}}
<ul class="nav nav-tabs tabs group pl-4 d-print-none" id="myTab" role="tablist">
  <li class="nav-item active nav-tab-rounded">
    <a class="active my-0 py-2" data-toggle="tab" href="#generales">Datos Generales</a>
  </li>
  <li class="nav-item nav-tab-rounded">
    <a class="my-0 py-2" data-toggle="tab" href="#profile">Datos Complementarios</a>
  </li>
</ul>

<div class="tab-content mr-3 d-print-none" id="myTabContent">
    <div class="tab-pane fade show active" id="generales" role="tabpanel" aria-labelledby="generales-tab">
        <div class="container-fluid border">
            <div class="row border pb-2">
                <div class="col-lg-4 border">
                    <div class="row my-1">
                        <div class="col-xl-12">
                            <div class="input-group form-control-sm-erp">
                                <div class="input-group-prepend">
                                    <label class="input-group-text col-form-label col-form-label-sm py-0 background-title-jqgrid" for="pto_venta">Punto:Venta</label>
                                </div>
                                <select class="form-control form-control-sm" id="pto_venta"><option value="{{user.codigo_punto_venta}}">{{user.codigo_punto_venta}} - {{user.nombre_punto_venta}}</option></select>
                            </div>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-xl-12">
                            <div class="input-group">
                                
                                <label for="motivo_requerimiento" class="d-none col-sm-5 col-form-label col-form-label-sm">Motivo:</label>
                                <input type="text" id="motivo_requerimiento" class="d-none col-sm-7 form-control form-control-sm " disabled>

                                <input type="text" id = "numero_requerimiento" class="form-control form-control-sm" placeholder="Número de Requerimiento">
                                <div class="input-group-prepend">
                                    <button type="button" class="form-control form-control-sm btn btn-light btn-sm sm pt-0" id ="buscar_pendientes" data-toggle="tooltip" data-placement="top" title="Buscar">
                                        <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 border">
                    <div class="row my-1">
                        <div class="col-sm-12">
                            <div class="input-group form-control-sm-group-serie">
                                <label class="sm input-group-text py-0 border-right-0" for="fecha_doc" style="background:#e9ecef;border-top-right-radius:0px;border-bottom-right-radius:0px">Fecha:</label>
                                <input type="date" id = "fecha_doc" class="form-control form-control-sm no-calendar border-left-0 pl-0" style=";border-top-left-radius:0px;border-bottom-left-radius:0px">
                                <div class="form-check form-check-inline  form-control-sm-erp ml-4">
                                    <input class="form-check-input" type="radio" name="correlativo" id="automatico" value="automatico">
                                    <label class="form-check-label col-form-label-sm" for="automatico">Automático</label>
                                </div>
                                <div class="form-check form-check-inline  form-control-sm-erp">
                                    <input class="form-check-input" type="radio" name="correlativo" id="manual" value="manual">
                                    <label class="form-check-label col-form-label-sm" for="manual">Manual</label>
                                </div>
                                <input type="text" id="numero_correlativo" class="form-control form-control-sm text-right px-4" placeholder="Número">
                            </div>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-sm-12">
                            <select class="form-control form-control-sm  c_mantenimientos" id="responsable">
                                <option value="00">Ninguno</option>
                            </select>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-sm-12">
                            <input type="text" id="glosa" class="form-control form-control-sm " placeholder="Glosa">
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 border d-none">
                    <div class="row my-1">
                        <div class="col-xl-5 form-control-sm-erp">
                            <label for="base_calculada" class="col-form-label col-form-label-sm">Base Calc.:</label>
                        </div>
                        <div class="col-xl-7">
                            <input type="text" id = "base_calculada_mask" class="form-control form-control-sm  text-right" value ="0.00" disabled>
                        </div>
                        <div class="col-xl-7 d-none">
                            <input type="number" id = "base_calculada" class="form-control form-control-sm text-right">
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-xl-5 form-control-sm-erp">
                            <label for="monto_descuento" class="col-form-label col-form-label-sm">Dsct.:</label>
                        </div>
                        <div class="col-xl-7">
                            <input type="text" id = "monto_descuento_mask" class="form-control form-control-sm  text-right" value ="0.00" disabled>
                        </div>
                        <div class="col-xl-7 d-none">
                            <input type="number" id = "monto_descuento" class="form-control form-control-sm  text-right">
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-xl-5 form-control-sm-erp">
                            <label for="subtotal" class="col-form-label col-form-label-sm">Base Imp.:</label>
                        </div>
                        <div class="col-xl-7">
                            <input type="text" id = "subtotal_mask" class="form-control form-control-sm  text-right" value ="0.00" disabled>
                        </div>
                        <div class="col-xl-7 d-none">
                            <input type="number" id = "subtotal" class="form-control form-control-sm  text-right">
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-xl-5 form-control-sm-erp">
                            <label for="igv" class="col-form-label col-form-label-sm">IGV:</label>
                        </div>
                        <div class="col-xl-7">
                            <input type="text" id = "igv_mask" class="form-control form-control-sm  text-right" value ="0.00" disabled>
                        </div>
                        <div class="col-xl-7 d-none">
                            <input type="number" id = "igv" class="form-control form-control-sm  text-right">
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-xl-5 form-control-sm-erp">
                            <label for="total" class="col-form-label col-form-label-sm">Total:</label>
                        </div>
                        <div class="col-xl-7">
                            <input type="text" id = "total_mask" class="form-control form-control-sm  text-right" value ="0.00" disabled>
                        </div>
                        <div class="col-xl-7 d-none">
                            <input type="number" id = "total" class="form-control form-control-sm  text-right">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="container-fluid border">
            <div class="row border">
                <div class="col-sm-6 border">
                    <div class="input-group d-none">
                        <div class="input-group-prepend">
                            <label class="input-group-text form-control form-control-sm text-right" for="porc_descuento">Dsct.:</label>
                        </div>
                        <input type="number" id ="porc_descuento" class="form-control form-control-sm text-right" value ="0">
                        <div class="input-group-append">
                            <span class="input-group-text form-control form-control-sm text-right">%</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 border">
                    <div class="input-group form-control-sm-erp form-control-sm-group-moneda d-none">
                        <select class="form-control form-control-sm form-control-sm-moneda no-spin" id="moneda">
                        </select>
                        <select class=" form-control form-control-sm " id="tipo_cambio">
                        </select>
                        <input type="number" class="form-control form-control-sm text-right no-spin-number form-control-sm-tasa-cambio" id="tasa_cambio">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-none">
    <input id="user-Ventas_Mas_Igv" type="text" value="{{user.ventas_mas_igv}}">
    <input id="user-Unidad_negocio" type="text" value="{{user.codigo_unidad_negocio}}">
    <input id="user-codigo_centro_costos" type="text" value="{{user.codigo_centro_costos}}">
    <input id="user-codigo_punto_venta" type="text" value="{{user.codigo_punto_venta}}">
    <input id="user-codigo_ninguno" type="text" value="00">
    <input id="user-Busqueda_Punto_Venta" type="text" value="{{user.globales_busqueda_pto_venta}}">
    <input id="modulo_formatos" type="text" value="orden_compra">
    
</div>

