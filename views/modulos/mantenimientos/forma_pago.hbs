<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-6">
                    <form class="m-0 p-0">
                        <div class="form-group row my-05 py-05">
                            <label for="tablas_forma_pago_codigo" class="col-sm-4 col-form-label col-form-label-sm">Código:</label>
                            <input type="text" id="tablas_forma_pago_codigo" class="col-sm-8 form-control form-control-sm m-0 p-0" value="{{datos.Codigo}}"value="{{datos.Codigo}}" placeholder="Códgo" maxlength="3">
                        </div>
                    </form>
                </div>
                <div class="col-sm-4">
                </div>
                <div class="col-sm-2">
                    <form class="m-0 p-0">
                        <div class="form-check row my-05 py-05">
                            <input class="form-check-input" type="checkbox" id="tablas_forma_pago_afecta_percepcion" checked>
                            <label class="form-check-label col-form-label-sm" for="tablas_forma_pago_afecta_percepcion">Afecta Percepcion</label>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <form class="m-0 p-0">
                        <div class="form-group row my-05 py-05">
                            <label for="tablas_forma_pago_nombre" class="col-sm-3 col-form-label col-form-label-sm">Nombre:</label>
                            <input type="text" id="tablas_forma_pago_nombre" class="col-sm-9 form-control form-control-sm m-0 p-0"value="{{datos.Nombre}}" placeholder="Nombre" maxlength="50">
                        </div>
                    </form>
                </div>
                <div class="col-sm-4">
                    <form class="m-0 p-0">
                        <div class="form-group row my-05 py-05">
                            <label for="tablas_forma_pago_dias" class="col-sm-4 col-form-label col-form-label-sm">N Dias:</label>
                            <input type="number" id="tablas_forma_pago_dias" class="col-sm-8 form-control form-control-sm m-0 p-0"value="{{datos.Dias}}" maxlength="50">
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <table id="grid_tablas_forma_pago_detalle"></table>
            </div>
        </div>
    </div>
</div>

<div class="d-none">
    {{#if datos}}
        <input type="text" id="tablas_forma_pago_afecta_percepcion_predeterminado" value="{{datos.Percepcion}}">
    {{else}}
        <input type="text" id="tablas_forma_pago_afecta_percepcion_predeterminado" value="N">
    {{/if}}
</div>